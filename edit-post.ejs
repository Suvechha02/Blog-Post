<a href="/dashboard">&larr; Back</a>
<div class="admin-title">
  <h2>View / Edit Post</h2>

  <form action="/delete/<%= data._id %>?_method=DELETE" method="post">
    <input type="submit" value="Delete" class="btn btn-delete">
  </form>
</div>
<form action="/edit-post/<%= data._id %>?_method=PUT" method="post">
  <label for="title"><b>Title</b></label>
  <input type="text" name="title" placeholder="Enter Title" value="<%= data.title %>">
  <label for="body"><b>Content</b></label>
  <textarea name="body" cols="10" rows="10"><%= data.body %></textarea>
  <input type="submit" value="Update" class="btn">
</form>