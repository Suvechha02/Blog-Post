<div class="author">
  <h1 class="author_heading">
    Hie, I am Suvechha
  </h1>
  <p class="author_body">Web developer and a freelancer</p>
</div>
<img src="/img/heroImg.png" alt="hero_image" width="981" height="528" class="hero-image">

<section class="articles">
  <h2 class="articles_heading">Latest posts</h2>
  <ul class="articles-ul">
    <% data.forEach(post=> { %>
      <li>
        <a href="/post/<%= post._id %>">
          <span>
            <%= post.title %>
          </span>
          <span class="articles-list_dates">
            <%= post.createdAt.toDateString() %>
          </span>
        </a>
      </li>
      <% }) %>
  </ul>
  <% if (nextPage !==null) { %>
    <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
    <% } %>

</section>